{
    "auth": "cookies",
    "credentials": {
        "file":"credentials.json"
    },
    "cookies": "cookies.json",
    "selenium": {
        "webdriver_path": "chrome/chromedriver.exe",
        "browser_path": "chrome/chrome.exe"
        },
    "cache": {
        "directory":".ud_cache",
        "settings": {
            "courseIdLookup": {
                "use_cache": true,
                "expire": 0
            },
            "courseContent": {
                "use_cache": true,
                "expire": 5184000
            },
            "lessonStreams": {
                "use_cache": true,
                "expire": 86400
            },
            "purchasedCourses": {
                "use_cache": true,
                "expire": 86400
            },
            "articleBody": {
                "use_cache": true,
                "expire": 86400
            }
        }        
    },
    "downloads": {
        "video_resolution": "max",
        "location": "downloads/$course-slug/$ind-section-slug/$ind-lesson-slug.$ext",
        "threads":1,
        "captions":true
    },
    "xhr_headers": "headers.txt"
}